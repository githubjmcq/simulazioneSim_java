package esercizi;
// Classe operazioni dotata di un costruttore che prende due numeri a e b e quattro metodi che simulano le 4 operazioni
public class Operazioni {
	
	int a;
	int b;
	
	Operazioni(int a, int b) {
		this.a = a;
		this.b = b;
	}
	
	void somma() {
		System.out.println(a + b);
	}
	void sottrazione() {
		System.out.println(a - b);
	}
	void prodotto() {
		System.out.println(a * b);
	}
	void divisione() {
		System.out.println(a / b);
	}
}

